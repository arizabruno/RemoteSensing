<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/ativar_localizacao"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="104dp"
        android:layout_height="44dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="FIND ME!"
        android:textColorLink="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/location_text_view"
        app:layout_constraintTop_toBottomOf="@+id/temperature_force_text_view" />

    <TextView
        android:id="@+id/location_text_view"
        android:layout_width="222dp"
        android:layout_height="44dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="0.00000 , 000000"
        android:textAlignment="center"
        android:textColor="#1a237e"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/ativar_localizacao"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wind_force_text_view" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"
        android:text="Wind Speed"
        android:textColor="#455a64"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wind_force_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wind_force_text_view"
        android:layout_width="174dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="cursive"
        android:text="--"
        android:textAlignment="center"
        android:textColor="#455a64"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/location_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:fontFamily="cursive"
        android:text="Temperature"
        android:textColor="#ffb300"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/temperature_force_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temperature_force_text_view"
        android:layout_width="164dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="cursive"
        android:text="--"
        android:textAlignment="center"
        android:textColor="#ffb300"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/ativar_localizacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:text="Click here to get the instructions on how to build the Aeropod"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>